<yas>

    <scene root="table" axis_length="5" />

    <views default="perspective" >
        <perspective id="perspective" near="1" far="5" angle="30">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="ortho"  near="1" far="5" left="10" right="10" top="10" bottom="10" />
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="omni" enabled="1" >
            <location  x="0" y="10" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <!--TODO: voltar a por o spot -->
    </lights>

    <textures>
        <texture id="wood_texture" file="images/wood-image.jpg" />
    </textures>

    <materials>
        <material id="material_01" shininess = "0.3" >
            <emission r="0.3" g="0.3" b="0.3" a="1" />
            <ambient r="0.6" g="0.6" b="0.6" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>
    </materials>

    <transformations>
         <transformation id="null_transformation"> 
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="rotation_x_90"> 
            <rotate axis="x" angle="90"/>
        </transformation>

        <transformation id="rotation_y_90"> 
            <rotate axis="y" angle="90"/>
        </transformation>

        <transformation id="scale_0.5_0.3_0.5"> 
            <scale x="0.5" y="0.3" z="0.5"/>
        </transformation>

        <transformation id="transformation_02"> <!-- pernas -->
          <translate x="-4" y="-4" z="5"/>
        </transformation>

        <transformation id="transformation_03">
          <translate x="-4" y="4" z="5"/>
        </transformation>

        <transformation id="transformation_04">
          <translate x="4" y="-4" z="5"/>
        </transformation>

        <transformation id="transformation_05">
          <translate x="4" y="4" z="5"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="plane">
          <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="cylinder">
          <cylinder base="2" top="2" height="10" slices="10" stacks="10" />
        </primitive>
    </primitives>

    <components>

      <component id="table">
        <transformation>
            <transformationref id="null_transformation" />
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

        <texture id="wood_texture" length_s="1" length_t="1" />

        <children>
          <componentref id="table_countertop" />
          <componentref id="table_leg_1" />
          <componentref id="table_leg_2" />
          <componentref id="table_leg_3" />
          <componentref id="table_leg_4" />
        </children>
      </component>

      <component id="table_countertop">
        <transformation>
            <translate x="0" y="3" z="0"/>
            <scale x="3" y="0.3" z="7"/>
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

        <texture id="wood_texture" length_s="1" length_t="1" />

        <children>
          <componentref id="cube" />
        </children>
      </component>

      <component id="cube">
        <transformation>
            <transformationref id="null_transformation" />
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

        <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <componentref id="cube_top" />
          <componentref id="cube_bottom" />
          <componentref id="cube_left" />
          <componentref id="cube_right" />
          <componentref id="cube_back" />
          <componentref id="cube_front" />
        </children>
      </component>

      <component id="cube_top">
        <transformation>
            <translate x="0" y="0.5" z="0"/>
            <transformationref id="rotation_x_90" />
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

        <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <primitiveref id="plane" />
        </children>
      </component>

      <component id="cube_bottom">
        <transformation>
            <translate x="0" y="-0.5" z="0"/>
            <transformationref id="rotation_x_90" />
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

         <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <primitiveref id="plane" />
        </children>
      </component>
      
      <component id="cube_left">
        <transformation>
            <translate x="0" y="0" z="0.5"/>
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

         <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <primitiveref id="plane" />
        </children>
      </component>

      <component id="cube_right">
        <transformation>
            <translate x="0" y="0" z="-0.5"/>
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

         <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <primitiveref id="plane" />
        </children>
      </component>

      <component id="cube_back">
        <transformation>
            <translate x="-0.5" y="0" z="0"/>
            <transformationref id="rotation_y_90"/>
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

         <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <primitiveref id="plane" />
        </children>
      </component>

      <component id="cube_front">
        <transformation>
            <translate x="0.5" y="0" z="0"/>
            <transformationref id="rotation_y_90"/>
        </transformation>

        <materials>
          <material id="material_01" />
        </materials>

         <texture id="inherit" length_s="1" length_t="1" />

        <children>
          <primitiveref id="plane" />
        </children>
      </component>

        <component id="table_leg_1">
          <transformation>
              <transformationref id="transformation_02" />
              <transformationref id="scale_0.5_0.3_0.5" />
            </transformation>

            <materials>
              <material id="material_01" />
            </materials>

            <texture id="wood_texture" length_s="1" length_t="1" />

            <children>
              <primitiveref id="cylinder" />
            </children>
          </component>

          <component id="table_leg_2">
            <transformation>
                <transformationref id="transformation_03" />
              </transformation>
              <materials>
                <material id="material_01" />
              </materials>
              <texture id="wood_texture" length_s="1" length_t="1" />
              <children>
                <primitiveref id="cylinder" />
              </children>
            </component>

            <component id="table_leg_3">
              <transformation>
                  <transformationref id="transformation_04" />
                </transformation>
                <materials>
                  <material id="material_01" />
                </materials>
                <texture id="wood_texture" length_s="1" length_t="1" />
                <children>
                  <primitiveref id="cylinder" />
                </children>
              </component>

              <component id="table_leg_4">
                <transformation>
                    <transformationref id="transformation_05" />
                  </transformation>
                  <materials>
                    <material id="material_01" />
                  </materials>
                  <texture id="wood_texture" length_s="1" length_t="1" />
                  <children>
                    <primitiveref id="cylinder" />
                  </children>
                </component>
      </components>

</yas>
