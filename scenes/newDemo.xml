<yas>

    <scene root="rootObject" axis_length="5" />

    <views default="perspective" >
        <perspective id="perspective" near="1" far="5" angle="30">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </perspective>
        <ortho id="ortho"  near="1" far="5" left="10" right="10" top="10" bottom="10" />
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="omni" enabled="1" >
            <location  x="0" y="10" z="0" w="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <!--TODO: voltar a por o spot -->
    </lights>

    <textures>
        <texture id="wood_texture" file="images/wood-image.jpg" />
    </textures>

    <materials>
        <material id="material_01" shininess = "0.3" >
            <emission r="0.3" g="0.3" b="0.3" a="1" />
            <ambient r="0.6" g="0.6" b="0.6" a="1" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="transformation_01"> <!-- topo -->
            <translate x="0" y="0" z="10"/>
        </transformation>

        <transformation id="transformation_02"> <!-- pernas -->
          <translate x="-4" y="-4" z="5"/>
        </transformation>

        <transformation id="transformation_03">
          <translate x="-4" y="4" z="5"/>
        </transformation>

        <transformation id="transformation_04">
          <translate x="4" y="-4" z="5"/>
        </transformation>

        <transformation id="transformation_05">
          <translate x="4" y="4" z="5"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="table_top">
          <rectangle x1="1" y1="5" x2="6" y2="1" />
        </primitive>

        <primitive id="table_leg">
          <cylinder base="2" top="2" height="10" slices="10" stacks="10" />
        </primitive>
    </primitives>

    <components>
      <component id="component_table_top">

        <transformation>
            <transformationref id="transformation_01" />
          </transformation>

          <materials>
            <material id="material_01" />
          </materials>

          <texture id="wood_texture" length_s="2" length_t="2" />

          <children>
            <primitiveref id="table_top" />
          </children>
        </component>

        <component id="component_table_leg_01">
          <transformation>
              <transformationref id="transformation_02" />
            </transformation>

            <materials>
              <material id="material_01" />
            </materials>

            <texture id="wood_texture" length_s="2" length_t="2" />

            <children>
              <primitiveref id="table_leg" />
            </children>
          </component>

          <component id="component_table_leg_02">
            <transformation>
                <transformationref id="transformation_03" />
              </transformation>
              <materials>
                <material id="material_01" />
              </materials>
              <texture id="wood_texture" length_s="2" length_t="2" />
              <children>
                <primitiveref id="table_leg" />
              </children>
            </component>

            <component id="component_table_leg_03">
              <transformation>
                  <transformationref id="transformation_04" />
                </transformation>
                <materials>
                  <material id="material_01" />
                </materials>
                <texture id="wood_texture" length_s="2" length_t="2" />
                <children>
                  <primitiveref id="table_leg" />
                </children>
              </component>

              <component id="component_table_leg_04">
                <transformation>
                    <transformationref id="transformation_05" />
                  </transformation>
                  <materials>
                    <material id="material_01" />
                  </materials>
                  <texture id="wood_texture" length_s="2" length_t="2" />
                  <children>
                    <primitiveref id="table_leg" />
                  </children>
                </component>
      </components>

</yas>
